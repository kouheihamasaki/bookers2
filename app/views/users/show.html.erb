
<div class="container px-5">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
   <%= image_tag @user.get_profile_image(100,100) %>
   <table class="table">
    <tbody>
     <tr>
	    <th>name</th>
	    <th><%= @user.name %></th>
     </tr>
     <tr>
	    <th>introduction</th>
	    <th><%= @user.introduction %></th>
     </tr>
    </tbody>
   </table>
   <div class="row">
    <a class="btn btn-outline-secondary btn-block edit_user_id" href="/users/id"></a>
   </div>
   <div class="row">
    <h2 class="mt-3">New book</h2>
    <div>
     <%= form_with model: @book do |f| %>
     <div class="field">
      <p>Title</p>
      <%= f.text_field :title %>
     </div>
     <div class="field">
      <p>Opinion</p>
      <%= f.text_area :body %>
     </div>
     <div class="actions">
      <%= f.submit 'Create Book' %>
      <% end %>
     </div>
    </div>
   </div>
  </div>
   
  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table table-hover table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= image_tag @user.get_profile_image(100,100) %></td>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
    </tr>
   <% end %>
  </tbody>
  </table>
    
    
 </div>
</div>


