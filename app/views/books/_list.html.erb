
  <div class="col-md-3">
   <h2>User info</h2>
   <%= image_tag user.get_profile_image(100,100) %>
   <table class="table">
    <tbody>
     <tr>
	    <th>name</th>
	    <th><%= user.name %></th>
     </tr>
     <tr>
	    <th>introduction</th>
	    <th><%= user.introduction %></th>
     </tr>
    </tbody>
   </table>
   <div class="row">
    <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block mb-3' do %>
     <i class="fas fa-user-cog"></i>
     <% end %>
   </div>
   <div class="row">
    <h2 class="mt-3">New book</h2>
    <div>
     <%= form_with model: book do |f| %>
     <div class="field">
      <p>Title</p>
      <%= f.text_field :title %>
     </div>
     <div class="field">
      <p>Opinion</p>
      <%= f.text_area :body %>
     </div>
     <div class="actions">
      <%= f.submit 'Create Book' %>
      <% end %>
     </div>
    </div>
   </div>
  </div>
